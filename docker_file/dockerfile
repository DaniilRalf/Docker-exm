# # =============================================================1-BASE
# # Основа для образа
# FROM ubuntu:22.04

# # Информация которая будетвидна в контейнере или образе при его инспектировании(inspect)
# LABEL author=DaniilRaigerd
# LABEL type=Demo

# # Комана выполняемая при запуске контейнера на основе этого образа
# CMD ["echo", "hello test"]


# =============================================================2-NGINX
FROM ubuntu:22.04

# Команда RUN выполняется 1 раз при формировании образа
RUN apt update
RUN apt install nginx -y

# Теперь все команды ниже, в контейнере, будут выполнять в этой директории
# Это нужно учитывать прикоманде COPY, посколькукопирование будет прям в WORKDIR
WORKDIR /the/workdir/path/

# Копирование извнешки в контейнер
COPY path/global/ /path/conteiner/ (or .)

# Глобальные переменные внутри которыйбудут внутри контейнера
ENV OWNER=owmer_name
ENV TYPE=demo

# Команда которая не влияет на открытие порты а исключительно информирует
# (и автоматически пробразывает внешний порт на указаный тут если при запуске указать -P)
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]